/* pages/login/login.wxss */
.containers{
  overflow: hidden;
}
.content{
  width: 100%;
  margin-top: 200rpx;
}
.imgbox{
  width: 150rpx;
  height: 150rpx;
 
  margin: 200rpx auto 0;
}
.imgbox image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.input{
  width: 500rpx;
  height: 80rpx;
  border: solid 1rpx #cccccc;
  border-radius: 40rpx;
  margin: 10rpx auto;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}
.content input:last-child{
  margin: 30rpx auto 0;
}
.content>text{
  font-size: 24rpx;
  position: absolute;
  right: 145rpx;
  color: #cccccc;
}
.btn_box{
  width: 100%;
  text-align: center;
}
.btn_box button:not([size='mini']) {
  width:500rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 100rpx;
  }
  