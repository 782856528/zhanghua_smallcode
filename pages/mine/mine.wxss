/* pages/mine/mine.wxss */
page{
  height: 100% !important;

}
.contain{
overflow: hidden;
background: #e6e6e6;
}
.content{
  background: white;
  font-size:24rpx ;
}
.title{
  font-size: 38rpx;
  font-weight: 700;
  height: 100rpx;
  box-shadow: 0 2rpx 5rpx #e6e6e6;
  box-sizing: border-box;
  line-height: 100rpx;
  margin: 0 0 10rpx;
}
.title:before{
  content: "|";
 color: red;
}
.box{
  width: 98%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  padding: 0 0 10rpx;
  box-sizing: border-box;
}
.content_box2 view:first-child{
  padding: 30rpx 0;
}
.content1{
  width: 360rpx;
  padding: 0 0 10rpx 0;
  border-radius: 30rpx;
  box-shadow:  0 0 10rpx #e6e6e6;
  box-shadow: 0 0 20rpx #e6e6e6;
}
.content1>.imgbox{
  width: 360rpx;
  height: 300rpx;
  border-radius: 30rpx;
}
.content1>.imgbox image{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}
.content_box2{
width: 90%;
margin: 0 auto;

}

.content_box2 view:last-child{
  font-size: 24rpx;
  color: red;
}